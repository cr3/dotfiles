# .ratpoisonrc

# Emulate screen by starting with a new xterm
exec xterm

################
#
# ratpoison tweaks
#

# Set the default alignment for the message bar.
defbargravity center

# Set the horizontal and vertical padding inside the bar.
defbarpadding 0 0 0 0

# Set the border width for all windows.
defborder 0

# Set the padding around the edge of the screen.
defpadding 0 0 0 0

# Set the default gravity for normal windows.
defwingravity center

# Use the name of the program rather than the title in the window list
defwinname name

# Set the prefix key to something other than screen's default
escape C-s

# Don't display the help message
startup_message off

################
#
# keybindings
#

# bind c (`c' for create) to open a new xterm
bind c exec xterm

# bind d (`d' for detach) to quit
bind d quit

# bind t (`t' for time) to display the current time of day
unbind a
bind t exec ratpoison -d :0.0 -c "echo `date +'%T - %A%n %y/%m/%d - %B'`  `cal | tail +2 | sed -e 's/^Su/\n\n Su/' -e 's/.*/ & /' -e \"s/\ $(date +%e)\ /\<$(date +%e)\>/\"`"

# bind x (`x' for menu) to open ratmenu
bind x exec ratmenu -display :0.0 -fg black -bg white -style dreary -label "Menu" "Xterm" xterm "Firefox" firefox "HipChat" hipchat "Skype" skype "LibreOffice" libreoffice
